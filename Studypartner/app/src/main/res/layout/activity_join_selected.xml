<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_nameAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity:"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:textStyle="italic"
        android:textColor="#ff9900"
        />

    <TextView
        android:id="@+id/tv_activityName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="2dp"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_nameAct"
        android:background="#99ccff"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
    />

    <TextView
        android:id="@+id/tv_activityDes"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="2dp"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_activityName"
        android:background="#99ccff"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        />

    <TextView
        android:id="@+id/tv_createUser"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="2dp"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_activityDes"
        android:background="#99ccff"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="2dp"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_createUser"
        android:background="#99ccff"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        />

    <Button
        android:id="@+id/join_btn"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="JOIN"
        android:background="#99ccff"
        android:textColor="#ff9900"/>
</RelativeLayout>